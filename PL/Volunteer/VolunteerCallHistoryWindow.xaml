<Window x:Class="PL.Volunteer.VolunteerCallHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="היסטוריית קריאות" Height="450" Width="900"
        FlowDirection="RightToLeft"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <DataGrid ItemsSource="{Binding ClosedCalls}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserSortColumns="True"
                  CanUserResizeColumns="True"
                  GridLinesVisibility="All"
                  AlternatingRowBackground="#FFF0F0F0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="מזהה קריאה" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="סוג קריאה" Binding="{Binding CallType}" Width="Auto"/>
                <DataGridTextColumn Header="כתובת" Binding="{Binding FullAddress}" Width="*"/>
                <DataGridTextColumn Header="תאריך פתיחה" Binding="{Binding OpenTime, StringFormat=dd/MM/yyyy HH:mm}" Width="Auto"/>
                <DataGridTextColumn Header="כניסה לטיפול" Binding="{Binding EntryToTreatmentTime, StringFormat=dd/MM/yyyy HH:mm}" Width="Auto"/>
                <DataGridTextColumn Header="סיום טיפול" Binding="{Binding ActualTreatmentEndTime, StringFormat=dd/MM/yyyy HH:mm}" Width="Auto"/>
                <DataGridTextColumn Header="סוג סיום טיפול" Binding="{Binding TreatmentEndType}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>