<Window x:Class="PL.VolunteerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Volunteer Details" Height="600" Width="800"
        Loaded="Window_Loaded"
        GotFocus="Window_GotFocus"
        Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Volunteer Information -->
        <Label Grid.Row="0" Grid.Column="0" Content="Name:" Margin="5"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Volunteer.Name, Mode=TwoWay}" Margin="5"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Phone:" Margin="5"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Volunteer.Phone, Mode=TwoWay}" Margin="5"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Email:" Margin="5"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Volunteer.Email, Mode=TwoWay}" Margin="5"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Address:" Margin="5"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Volunteer.Address, Mode=TwoWay}" Margin="5"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Max Distance:" Margin="5"/>
        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Volunteer.MaxDistance, Mode=TwoWay}" Margin="5"/>

        <Label Grid.Row="5" Grid.Column="0" Content="Distance Kind:" Margin="5"/>
        <ComboBox Grid.Row="5" Grid.Column="1" ItemsSource="{Binding Source={StaticResource DistanceKindCollectionKey}}" SelectedValue="{Binding Volunteer.DistanceKind, Mode=TwoWay}" Margin="5"/>

        <CheckBox Grid.Row="6" Grid.Column="1" Content="Active"
          IsChecked="{Binding Volunteer.IsActive, Mode=TwoWay}"
          IsEnabled="{Binding IsActiveCheckBoxEnabledProperty}"
          Margin="5"/>
        <!-- Volunteer ID (ReadOnly) -->
        <Label Grid.Row="7" Grid.Column="0" Content="ID:" Margin="5"/>
        <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding Volunteer.Id}" Margin="5" IsReadOnly="True"/>

        <!-- Volunteer Role (ReadOnly) -->
        <Label Grid.Row="8" Grid.Column="0" Content="Role:" Margin="5"/>
        <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding Volunteer.Role}" Margin="5" IsReadOnly="True"/>

        <Button Grid.Row="9" Grid.Column="1" Content="Update" Margin="5" Click="UpdateButton_Click"/>
        <Button Content="Change password" Click="UpdatePassword_Click"  Grid.Row="10" Grid.Column="1" Margin="5"/>

        <!-- Call Information -->
        <Label Grid.Row="11" Grid.Column="0" Content="Call Details:" FontWeight="Bold" Margin="5" Visibility="{Binding CallDetailsVisibility}"/>

        <Label Grid.Row="12" Grid.Column="0" Content="Call Type:" Margin="5" Visibility="{Binding CallDetailsVisibility}"/>
        <TextBox Grid.Row="12" Grid.Column="1" IsEnabled="False" Text="{Binding Volunteer.CallInProgress.CallType}" Margin="5" Visibility="{Binding CallDetailsVisibility}"/>

        <Label Grid.Row="13" Grid.Column="0" Content="Description:" Margin="5" Visibility="{Binding CallDetailsVisibility}"/>
        <TextBox Grid.Row="13" Grid.Column="1" IsEnabled="False" Text="{Binding Volunteer.CallInProgress.Description}" Margin="5" Visibility="{Binding CallDetailsVisibility}"/>

        <Label Grid.Row="14" Grid.Column="0" Content="Address:" Margin="5" Visibility="{Binding CallDetailsVisibility}"/>
        <TextBox Grid.Row="14" Grid.Column="1" IsEnabled="False" Text="{Binding Volunteer.CallInProgress.FullAddress}" Margin="5" Visibility="{Binding CallDetailsVisibility}"/>

        <Label Grid.Row="15" Grid.Column="0" Content="Status:" Margin="5" Visibility="{Binding CallDetailsVisibility}"/>
        <TextBox Grid.Row="15" Grid.Column="1" IsEnabled="False" Text="{Binding Volunteer.CallInProgress.status}" Margin="5" Visibility="{Binding CallDetailsVisibility}"/>

        <Label Grid.Row="16" Grid.Column="0"  Content="Distance:" Margin="5" Visibility="{Binding CallDetailsVisibility}" />
        <TextBox Grid.Row="16" Grid.Column="1" IsEnabled="False" Text="{Binding Volunteer.CallInProgress.DistanceFromVolunteer}" Visibility="{Binding CallDetailsVisibility}"/>
        <!-- Call Actions -->
        <StackPanel Grid.Row="17" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button Content="Complete Call" Margin="5" Click="CompleteCallButton_Click" Visibility="{Binding CallDetailsVisibility}"/>
            <Button Content="Cancel Call" Margin="5" Click="CancelCallButton_Click" Visibility="{Binding CallDetailsVisibility}"/>
            <Button Content="Call History" Margin="5" Click="HistoryCallButton_Click"/>
            <Button Content="Select Call" Margin="5" Click="SelectCall_Click"
            IsEnabled="{Binding IsSelectCallButtonEnabled}"/>
        </StackPanel>
    </Grid>
</Window>