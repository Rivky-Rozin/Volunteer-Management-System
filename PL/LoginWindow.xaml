<Window x:Class="MyApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="400" Width="350"
        xmlns:controls="clr-namespace:PL.Controls">

    <!-- נשתמש ב-Grid כדי לקבל שליטה מלאה על המיקום -->
    <Grid>

       
        <!-- VerticalAlignment="Top" מצמיד למעלה -->
        <controls:ThemeToggleButton HorizontalAlignment="Right" VerticalAlignment="Top" 
                                    Margin="0,10,10,0"/>

        <!-- 2. תוכן הלוגין ממורכז בחלון -->
        <!-- StackPanel ישמש רק לאריזת שדות הלוגין יחד -->
        <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <TextBlock Text="Id:" FontWeight="SemiBold"/>
            <TextBox Text="{Binding Id, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>

            <TextBlock Text="Password:" Margin="0,10,0,0" FontWeight="SemiBold"/>
            <TextBox Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>

            <Button Content="Login" Click="LoginButton_Click" Margin="0,20,0,0" Height="35" FontWeight="Bold"/>
        </StackPanel>

    </Grid>
</Window>