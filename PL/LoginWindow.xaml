<Window x:Class="MyApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="400" Width="300">
    <StackPanel Margin="20">
        <TextBlock Text="Id:" />
        <TextBox Text="{Binding Id, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>

        <TextBlock Text="Password:" />
        <TextBox Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>

        <Button Content="Login" Click="LoginButton_Click" Margin="0,10"/>
    </StackPanel>
</Window>
