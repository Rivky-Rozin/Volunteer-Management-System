<Window x:Class="PL.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Width="780" Height="50" HorizontalAlignment="Center">
                <Label Content="Enter your name:" VerticalAlignment="Center" MinWidth="100" MaxWidth="300"/>
                <TextBox Width="100" Margin="10,0" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Width="780" Height="50" HorizontalAlignment="Left">
                <Label Content="Enter your password:" VerticalAlignment="Center"/>
                <TextBox Width="100" Margin="10,0" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
