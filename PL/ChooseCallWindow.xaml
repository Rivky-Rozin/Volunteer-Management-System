<Window x:Class="PL.ChooseCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="בחירת קריאה לטיפול" Height="600" Width="900"
        FlowDirection="RightToLeft"
        WindowStartupLocation="CenterScreen"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Filter Row -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <!-- Right: List -->
            <ColumnDefinition Width="*"/>
            <!-- Left: Details -->
        </Grid.ColumnDefinitions>

        <!-- Filter & Sort Controls -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,10">
            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Margin="0,35,0,0" Foreground="Gray" FontSize="12"
           Text="{Binding FilterValueHint}"/>
            <ComboBox Width="120" Margin="0,0,10,0"
                      ItemsSource="{Binding FilterFields}" SelectedItem="{Binding SelectedFilterField}"/>
            <TextBox Width="120" Margin="0,0,10,0"
                     Text="{Binding FilterValue, UpdateSourceTrigger=PropertyChanged}"/>
            <ComboBox Width="120" Margin="0,0,10,0"
                      ItemsSource="{Binding SortFields}" SelectedItem="{Binding SelectedSortField}"/>
            <Button Content="סנן" Width="60" Click="FilterButton_Click"/>
            <!--<Button Content="נקה" Width="60" Margin="5,0,0,0" Click="ClearFilterButton_Click"/>-->
        </StackPanel>

        <!-- Right: List of Open Calls -->
        <StackPanel Grid.Row="1" Grid.Column="0">
            <TextBlock Text="רשימת קריאות פתוחות זמינות" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            <ListView x:Name="OpenCallsListView"
                      ItemsSource="{Binding OpenCallsList}"
                      SelectedItem="{Binding SelectedCall, Mode=TwoWay}"
                      SelectionMode="Single">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="מספר מזהה" Width="80" DisplayMemberBinding="{Binding Id}" />
                        <GridViewColumn Header="סוג קריאה" Width="100" DisplayMemberBinding="{Binding CallType}" />
                        <GridViewColumn Header="כתובת מלאה" Width="200" DisplayMemberBinding="{Binding FullAddress}" />
                        <GridViewColumn Header="מרחק (ק''מ)" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DistanceFromVolunteer, StringFormat={}{0:F2}}" HorizontalAlignment="Right"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="פעולה" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="בחר קריאה" Click="ChooseCall_Click"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>

        <!-- Left: Selected Call Details & Address Update -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,0">
            <GroupBox Header="עדכון כתובת נוכחית" Padding="5" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="הזן כתובת חדשה:" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding CurrentVolunteer.Address, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>
                    <Button Content="עדכן כתובת ורענן רשימה" Click="UpdateAddress_Click" />
                </StackPanel>
            </GroupBox>
            <TextBlock Text="פרטי הקריאה שנבחרה:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" />
            <TextBlock Text="תיאור מילולי:" FontWeight="SemiBold"/>
            <TextBlock Text="{Binding SelectedCall.Description}" TextWrapping="Wrap" MinHeight="60"
                       Background="AliceBlue" Padding="5" Margin="0,0,0,10"/>
            <TextBlock Text="מפה:" FontWeight="SemiBold" Margin="0,10,0,5"/>
            <Border BorderBrush="Gray" BorderThickness="1" MinHeight="200" Background="Gainsboro">
                <TextBlock Text="" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray"/>
            </Border>
        </StackPanel>
    </Grid>
</Window>
