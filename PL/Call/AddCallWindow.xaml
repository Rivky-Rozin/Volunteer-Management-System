<Window x:Class="PL.Call.AddCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Add Call" Height="500" Width="450" 
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource WindowBackgroundBrush}">

    <Border Margin="20" 
            Background="{StaticResource SurfaceBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1.5"
            CornerRadius="4">

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Address Section -->
            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="Address" 
                         Foreground="{StaticResource TextSecondaryBrush}"
                         FontSize="14"
                         Margin="0,0,0,4"/>
                <TextBox Text="{Binding CurrentCall.Address, UpdateSourceTrigger=PropertyChanged}"
                        Height="32"/>
            </StackPanel>

            <!-- Description Section -->
            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <TextBlock Text="Description" 
                         Foreground="{StaticResource TextSecondaryBrush}"
                         FontSize="14"
                         Margin="0,0,0,4"/>
                <TextBox Text="{Binding CurrentCall.Description, UpdateSourceTrigger=PropertyChanged}"
                        Height="80"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Auto"/>
            </StackPanel>

            <!-- Call Type Section -->
            <StackPanel Grid.Row="2" Margin="0,0,0,15">
                <TextBlock Text="Call Type" 
                         Foreground="{StaticResource TextSecondaryBrush}"
                         FontSize="14"
                         Margin="0,0,0,4"/>
                <ComboBox SelectedItem="{Binding CurrentCall.CallType, UpdateSourceTrigger=PropertyChanged}"
                         ItemsSource="{Binding Source={StaticResource CallTypeCollectionKey}}"
                         Height="32"/>
            </StackPanel>

            <!-- Max Finish Time Section -->
            <StackPanel Grid.Row="3" Margin="0,0,0,15">
                <TextBlock Text="Max Finish Time" 
                         Foreground="{StaticResource TextSecondaryBrush}"
                         FontSize="14"
                         Margin="0,0,0,4"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Text="{Binding CurrentCall.MaxFinishTime, UpdateSourceTrigger=PropertyChanged}"
                            Height="32"
                            Margin="0,0,10,0"/>

                    <DatePicker Grid.Column="1"
                              SelectedDate="{Binding CurrentCall.MaxFinishTime, UpdateSourceTrigger=PropertyChanged}"
                              Height="32"
                              Width="120"/>
                </Grid>
            </StackPanel>

            <!-- Add Button -->
            <Button Grid.Row="6"
                    Content="Add Call"
                    Click="btnAdd_Click"
                    Height="40"
                    Width="120"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0"/>
        </Grid>
    </Border>
</Window>
