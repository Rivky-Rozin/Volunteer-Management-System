<Window x:Class="PL.Call.AddCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"  mc:Ignorable="d"
        Title="Add Call" Height="400" Width="400" WindowStartupLocation="CenterScreen">

    <Grid Margin="10" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Address:" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBox Text="{Binding CurrentCall.Address, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Margin="100,0,0,0" Width="250"/>

        <TextBlock Text="Description:" Grid.Row="1" VerticalAlignment="Center" Margin="0,10,0,0"/>
        <TextBox Text="{Binding CurrentCall.Description, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Margin="100,10,0,0" Width="250"/>

        <TextBlock Text="Call Type:" Grid.Row="2" VerticalAlignment="Center" Margin="0,10,0,0"/>
        <ComboBox SelectedItem="{Binding CurrentCall.CallType, UpdateSourceTrigger=PropertyChanged}"
                  Grid.Row="2" Margin="100,10,0,0" Width="150"
                  ItemsSource="{Binding Source={x:Static local:CallTypeCollection}}"/>
        <TextBlock Text="Status:" Grid.Row="3" VerticalAlignment="Center" Margin="0,10,0,0"/>
        <ComboBox SelectedItem="{Binding CurrentCall.Status, UpdateSourceTrigger=PropertyChanged}"
                  Grid.Row="3" Margin="100,10,0,0" Width="150"
                  ItemsSource="{Binding Source={x:Static local:CallStatusCollection}}"/>
        <TextBlock Text="Latitude:" Grid.Row="4" VerticalAlignment="Center" Margin="0,10,0,0"/>
        <TextBox Text="{Binding CurrentCall.Latitude, UpdateSourceTrigger=PropertyChanged}" Grid.Row="4" Margin="100,10,0,0" Width="150"/>

        <TextBlock Text="Longitude:" Grid.Row="5" VerticalAlignment="Center" Margin="0,10,0,0"/>
        <TextBox Text="{Binding CurrentCall.Longitude, UpdateSourceTrigger=PropertyChanged}" Grid.Row="5" Margin="100,10,0,0" Width="150"/>

        <Button Content="Add" Grid.Row="6" Width="80" Height="30" HorizontalAlignment="Right" Margin="0,20,0,0"
                Click="btnAdd_Click"/>
    </Grid>
</Window>